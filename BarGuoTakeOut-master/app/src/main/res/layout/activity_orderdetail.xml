<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/content_background_color">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/top_bar"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:background="@color/top_color">
            <ImageView
                android:onClick="back"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_actionbar_back"
                android:background="@drawable/btn_back_selector"/>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/index_title"
                style="@style/TitleTextTheme"
                android:layout_centerInParent="true"
                android:text="订单详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/gray_devide_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="8dp">
            <LinearLayout
                android:id="@+id/order_detail_top"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom">
                    <ImageView
                        android:id="@+id/order_detail_ok"
                        android:background="@drawable/take_out_green"
                        android:src="@mipmap/takeout_04"
                        android:layout_marginLeft="5dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:id="@+id/order_detail_text"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:text="订单完成"
                        android:layout_marginLeft="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/order_detail_info"
                    android:text="  你的订单已取消\n  已确认退款，正在为您退款"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/red"
                    android:background="@color/pink"
                    android:padding="5dp"/>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/order_top_all"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/order_detail_all"
                        android:textSize="16sp"
                        android:text="总价：0.5元"
                        android:layout_marginLeft="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/order_status_one"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <TextView
                        android:id="@+id/order_time_text"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="支付剩余时间"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="#444444"
                        android:layout_height="match_parent"
                        android:background="@color/font_gray"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray"/>
                    <TextView
                        android:id="@+id/order_detail_time"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="2分37秒"
                        android:textSize="22dp"
                        android:gravity="center"
                        android:textColor="#CC6600"
                        android:layout_height="match_parent"
                        android:background="@color/font_gray"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/order_detail_button"
                android:layout_below="@id/order_detail_top"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <Button
                    android:id="@+id/order_btn_cancel"
                    android:textSize="14sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:background="@drawable/gray_radio"
                    android:text="取消订单"
                    android:layout_width="80dp"
                    android:layout_height="30dp"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/order_btn_phone"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/order_btn_cancel"
                    android:textColor="#000000"
                    android:background="@drawable/gray_radio"
                    android:text="电话催单"
                    android:layout_width="80dp"
                    android:layout_height="30dp"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/order_btn_confirm"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/order_btn_phone"
                    android:textColor="#F28047"
                    android:background="@drawable/yellow_circle"
                    android:text="确认收货"
                    android:layout_width="80dp"
                    android:layout_height="30dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/gray_bottom_devide"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dp"
                    android:layout_weight="7"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/take_up_one"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/take_out_green"
                        android:src="@mipmap/takeout_01"/>
                    <View
                        android:layout_width="45dp"
                        android:layout_height="3dp"
                        android:background="@color/gray"/>
                    <ImageView
                        android:id="@+id/take_up_two"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/take_out_green"
                        android:src="@mipmap/takeout_02"/>
                    <View
                        android:layout_width="45dp"
                        android:layout_height="3dp"
                        android:background="@color/gray"/>
                    <ImageView
                        android:id="@+id/take_up_three"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/gray_circle_order"
                        android:src="@mipmap/takeout_03"/>
                    <View
                        android:id="@+id/take_up_end"
                        android:layout_width="45dp"
                        android:layout_height="3dp"
                        android:background="@color/gray"/>
                    <ImageView
                        android:id="@+id/take_up_four"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/gray_circle_order"
                        android:src="@mipmap/takeout_04"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_weight="3">
                    <TextView
                        android:id="@+id/take_down_one"
                        android:text="提交订单"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/take_down_two"
                        android:text="餐厅接单"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/take_down_three"
                        android:text="配送中"
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/take_down_end"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/take_down_four"
                        android:text="已收获"
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/order_detail_shangjia"
            android:background="@drawable/gray_devide_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="8dp">
            <ImageView
                android:id="@+id/ic_order_dianpu"
                android:src="@mipmap/order_detail"
                android:layout_marginLeft="5dp"
                android:layout_width="17dp"
                android:layout_height="17dp"/>
            <TextView
                android:id="@+id/order_detail_dianpu"
                android:layout_toRightOf="@id/ic_order_dianpu"
                android:layout_marginLeft="5dp"
                android:text="店铺名称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/devide3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lv_address_3"
                android:layout_marginTop="6dp"
                android:layout_below="@id/ic_order_dianpu"/>
            <zykj.com.barguotakeout.view.OrderList
                android:layout_below="@id/devide3"
                android:orientation="vertical"
                android:id="@+id/all_buy_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </zykj.com.barguotakeout.view.OrderList>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/gray_devide_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:text="合计"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/order_detail_price"
                android:layout_alignParentRight="true"
                android:text="合计"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/gray_bottom_devide"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp">
            <Button
                android:id="@+id/order_next"
                android:textSize="16sp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textColor="#F28047"
                android:background="@drawable/yellow_circle"
                android:text="再来一单"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/order_detail_assess"
            android:background="@drawable/gray_devide_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="8dp">
            <ImageView
                android:id="@+id/ic_order_pingjia"
                android:src="@mipmap/order_detail"
                android:layout_marginLeft="5dp"
                android:layout_width="17dp"
                android:layout_height="17dp"/>
            <TextView
                android:layout_toRightOf="@id/ic_order_pingjia"
                android:layout_marginLeft="5dp"
                android:text="我的评价"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/devide2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lv_address_3"
                android:layout_marginTop="6dp"
                android:layout_below="@id/ic_order_pingjia"/>
            <LinearLayout
                android:layout_below="@id/devide2"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/order_assess_content"
                    android:text="订单评价订单评价订单评价订单评价订单评价订单评价订单评价订单评价订单评价订单评价订单评价订单评价订单评价"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/gray_devide_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="8dp">
            <ImageView
                android:id="@+id/ic_order_detail"
                android:src="@mipmap/ic_my_pwd"
                android:layout_marginLeft="5dp"
                android:layout_width="19dp"
                android:layout_height="19dp"/>
            <TextView
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_toRightOf="@id/ic_order_detail"
                android:layout_marginLeft="5dp"
                android:text="订单详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/devide"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="6dp"
                android:layout_below="@id/ic_order_detail"/>
            <LinearLayout
                android:layout_below="@id/devide"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/order_detail_ordernum"
                    android:padding="4dp"
                    android:text="订单号码："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_detail_updatetime"
                    android:padding="4dp"
                    android:text="订单时间："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_detail_payway"
                    android:padding="4dp"
                    android:text="支付方式："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_detail_phonenum"
                    android:padding="4dp"
                    android:text="手机号码："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_detail_address"
                    android:padding="4dp"
                    android:text="收藏地址："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>