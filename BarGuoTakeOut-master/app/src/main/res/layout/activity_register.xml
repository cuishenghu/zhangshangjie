<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >
    <RelativeLayout
        android:clickable="true"
        android:id="@+id/top_bar"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/top_color"
        >
        <ImageView
            android:onClick="back"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_actionbar_back"
            android:background="@drawable/btn_back_selector"
            />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/index_title"
            style="@style/TitleTextTheme"
            android:layout_centerInParent="true"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <!-- 登陆 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_mobile_title"
                android:layout_centerVertical="true"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="18sp"
                android:textColor="#000"
                />
            <EditText
                android:id="@+id/et_register_pwd"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_mobile_title"
                android:layout_centerVertical="true"
                android:hint="输入密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                />
        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_mobile_pwd_title"
                android:layout_centerVertical="true"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textSize="18sp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/et_register_confirm"
                android:password="true"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_mobile_pwd_title"
                android:layout_centerVertical="true"
                android:hint="确认密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_register"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:background="@drawable/gray_angle_shape"
        />


</LinearLayout>
