<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
             android:padding="10dp"
                android:background="@drawable/gray_devide_bt"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"/>
    <TextView
        android:id="@+id/tv_oitem_status"
        android:textSize="16sp"
        android:textColor="@color/top_color"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/v_devide"
        android:layout_below="@id/tv_oitem_status"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <ImageView
        android:id="@+id/iv_oitem_restic"
        android:src="@mipmap/iv_default"
        android:padding="4dp"
        android:layout_below="@id/v_devide"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/tv_restaurant_name"
        android:textColor="#333"
        android:padding="4dp"
        android:layout_below="@id/v_devide"
        android:layout_toRightOf="@id/iv_oitem_restic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/tv_price"
        android:padding="4dp"
        android:layout_toRightOf="@id/iv_oitem_restic"
        android:layout_below="@id/tv_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/arrow_to_history_order_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
</RelativeLayout>