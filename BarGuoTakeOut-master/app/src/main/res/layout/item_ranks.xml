<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp">
    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:id="@+id/iv_imageUrl"
        android:src="@mipmap/ic_launcher"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <RelativeLayout
        android:layout_toLeftOf="@id/no_tipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:textColor="#99000000"
            android:layout_margin="5dp"
            android:text="青岛啤酒"
            android:id="@+id/tv_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_identificate"
            android:layout_alignParentRight="true"
            android:background="@mipmap/identificate"
            android:text="认证8.9分"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="80dp"
            android:layout_height="25dp"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_below="@id/tv_title"
            android:text="地址：山东省临沂市兰山区红旗路金鼎国际大厦九楼904室中扬科技"
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/author_star"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/like_icon"
            android:layout_below="@id/tv_address"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_starnum"
            android:textSize="17dp"
            android:layout_marginLeft="2dp"
            android:layout_below="@id/tv_address"
            android:layout_toRightOf="@id/author_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(10)喜欢"/>
        <LinearLayout
            android:id="@+id/button_share"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_alignTop="@id/author_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top">
            <ImageView
                android:scaleType="centerInside"
                android:id="@+id/iv_jian"
                android:src="@mipmap/share_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:id="@+id/tv_goods_num"
                android:text="分享"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/tv_rankdetail"
        android:src="@mipmap/index_right_jiantou"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</LinearLayout>