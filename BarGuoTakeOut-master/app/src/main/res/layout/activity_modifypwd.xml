<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:clickable="true"
        android:id="@+id/top_bar"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/top_color"
        >
        <ImageView
            android:onClick="back"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_actionbar_back"
            android:background="@drawable/btn_back_selector"
            />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/index_title"
            style="@style/TitleTextTheme"
            android:layout_centerInParent="true"
            android:text="我的账户"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <EditText
        android:padding="8dp"
        android:id="@+id/et_pwd_old"
        android:hint="请输入旧密码(6~10个字符)"
        android:textSize="16sp"
        android:textColorHint="@color/gray"
        android:layout_margin="16dp"
        android:background="@drawable/sp_circle_editpwd"
        android:drawableLeft="@mipmap/ic_my_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:padding="8dp"
        android:id="@+id/et_pwd_new"
        android:hint="请输入新密码(6~10个字符)"
        android:textSize="16sp"
        android:textColorHint="@color/gray"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/sp_circle_editpwd"
        android:drawableLeft="@mipmap/ic_my_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_save"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:background="@drawable/gray_angle_shape"
        />
</LinearLayout>