<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ListView
        android:background="#FFF"
        android:listSelector="@drawable/chooseaddress_item"
        android:id="@+id/lv_province"
        android:layout_width="1dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        </ListView>
    <ListView
        android:listSelector="@drawable/choosea_2_selecor"
        android:background="#f2f2f2"
        android:scrollbars="none"
        android:id="@+id/lv_city"
        android:layout_width="1dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    </ListView>
    <ListView
        android:listSelector="@drawable/chooseaddress_item_2"
        android:background="#e5e5e5"
        android:scrollbars="none"
        android:id="@+id/lv_xiang"
        android:layout_width="1dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        </ListView>
    <ListView
        android:listSelector="@drawable/chooseaddress_item3"
        android:background="#d8d8d8"
        android:id="@+id/lv_address"
        android:layout_width="1dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>