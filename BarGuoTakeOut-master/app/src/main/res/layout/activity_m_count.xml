<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:clickable="true"
        android:id="@+id/top_bar"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/top_color"
        >
        <ImageView
            android:onClick="back"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_actionbar_back"
            android:background="@drawable/btn_back_selector"
            />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/index_title"
            style="@style/TitleTextTheme"
            android:layout_centerInParent="true"
            android:text="我的账户"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="4dp"
        android:background="@drawable/gray_devide_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_count_username"
            android:textSize="20sp"
            android:text="123456"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c9c9"></View>
        <RelativeLayout
            android:id="@+id/rl_me_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="头像"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_count_jiantou"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_to_history_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <zykj.com.barguotakeout.view.RoundImageView
                    android:id="@+id/rv_count_avator"
                    android:layout_toLeftOf="@id/iv_count_jiantou"
                    android:layout_margin="8dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c9c9"></View>

        <RelativeLayout
            android:id="@+id/rl_count_name"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="姓名"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_to_history_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c9c9"></View>

        <RelativeLayout
            android:id="@+id/rl_count_modyfipwd"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="修改密码"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_to_history_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c9c9"></View>

        <RelativeLayout
            android:id="@+id/rv_count_address"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="我的收货地址"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_to_history_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>