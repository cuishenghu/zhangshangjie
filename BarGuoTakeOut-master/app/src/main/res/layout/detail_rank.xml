<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@drawable/blank_bottom_devide">
        <ImageView
            android:onClick="back"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_actionbar_back"
            android:background="@drawable/btn_back_selector"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/index_title"
            style="@style/TitleTextTheme"
            android:layout_centerInParent="true"
            android:text="巴国榜详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/tm_bottom"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/top_bar_height">
            <LinearLayout
                android:id="@+id/rank_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/like_icon"/>
                <TextView
                    android:text="(10)喜欢"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rank_assess"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/assess_icon"/>
                <TextView
                    android:text="(10)评论"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rank_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/share_icon"/>
                <TextView
                    android:text="分享"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_above="@id/tm_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"
                android:src="@mipmap/barguo_test"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="味道"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RatingBar
                        android:layout_marginLeft="30dp"
                        style="@style/rating_Bar"
                        android:stepSize="0.5"
                        android:numStars="10"
                        android:rating="6.5"
                        android:isIndicator="true"
                        android:layout_height="20dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/comment_rating_bar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="卫生"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RatingBar
                        android:layout_marginLeft="30dp"
                        style="@style/rating_Bar"
                        android:stepSize="0.5"
                        android:numStars="10"
                        android:rating="6.5"
                        android:isIndicator="true"
                        android:layout_height="20dp"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="环境"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RatingBar
                        android:layout_marginLeft="30dp"
                        style="@style/rating_Bar"
                        android:stepSize="0.5"
                        android:numStars="10"
                        android:rating="6.5"
                        android:isIndicator="true"
                        android:layout_height="20dp"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="服务"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RatingBar
                        android:layout_marginLeft="30dp"
                        style="@style/rating_Bar"
                        android:stepSize="0.5"
                        android:numStars="10"
                        android:rating="6.5"
                        android:isIndicator="true"
                        android:layout_height="20dp"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="性价比"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RatingBar
                        android:layout_marginLeft="10dp"
                        style="@style/rating_Bar"
                        android:stepSize="0.5"
                        android:numStars="10"
                        android:rating="6.5"
                        android:isIndicator="true"
                        android:layout_height="20dp"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/luck_tv_content"
                android:padding="10dp"
                android:text="        美食，顾名思义就是美味的食物，贵的有山珍海味，便宜的有街边小吃。美食，顾名思义就是美味的食物，贵的有山珍海味，便宜的有街边小吃。美食，顾名思义就是美味的食物，贵的有山珍海味，便宜的有街边小吃。美食，顾名思义就是美味的食物，贵的有山珍海味，便宜的有街边小吃。美食，顾名思义就是美味的食物，贵的有山珍海味，便宜的有街边小吃。"
                android:textColor="#4c4c4c"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>