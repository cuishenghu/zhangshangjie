<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="100dp"
            android:padding="8dp">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_goodheader"
        android:src="@mipmap/ic_launcher"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:textColor="#99000000"
            android:layout_margin="5dp"
            android:text="青岛啤酒"
            android:id="@+id/tv_good_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_below="@id/tv_good_title"
            android:text="已售100份 推荐22份"
            android:id="@+id/tv_good_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_below="@id/tv_good_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/top_color"
            android:text="￥18"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">
        <LinearLayout
            android:id="@+id/button_group"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:visibility="invisible"
                android:scaleType="centerInside"
                android:id="@+id/iv_jian"
                android:background="@drawable/gray_circle"
                android:src="@mipmap/jian"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textSize="16sp"
                android:layout_margin="4dp"
                android:id="@+id/tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:id="@+id/iv_jia"
                android:background="@drawable/gray_circle"
                android:src="@mipmap/jia"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/no_tipe"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="已卖光"
                android:textColor="@color/top_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </RelativeLayout>
    </RelativeLayout>

</LinearLayout>