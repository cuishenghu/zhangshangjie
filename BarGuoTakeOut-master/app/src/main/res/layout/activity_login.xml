<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/top_bar"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/top_color"
        >
        <ImageView
            android:onClick="back"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_actionbar_back"
            android:background="@drawable/btn_back_selector"
            />
        <TextView
            android:layout_centerVertical="true"
            style="@style/TitleTextTheme"
            android:layout_centerInParent="true"
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:clickable="true"
            android:id="@+id/tv_login_register"
            android:padding="5dp"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
<!-- 登陆 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:background="#FFF"	    
		android:orientation="vertical"
	    >
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:gravity="center_vertical"
	        >
	        <TextView 
	            android:id="@+id/tv_mobile_title"
	            android:layout_centerVertical="true"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:text="手机号码"
	            android:textSize="18sp"
	            android:textColor="#000"
	            />
	        <EditText
                android:id="@+id/et_login_username"
                android:singleLine="true"
	            android:layout_marginLeft="20dp"
	            android:layout_toRightOf="@id/tv_mobile_title"
	            android:layout_centerVertical="true"
				android:hint="请输入手机号码"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content"	
				android:background="@null"			            
	            />
	    </RelativeLayout>
	    <View 
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_width="match_parent"	
				android:layout_height="1dp"
				android:background="#eee"        
	        
	        />
	        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:gravity="center_vertical"
	        >
	        <TextView 
	            android:id="@+id/tv_mobile_pwd_title"
	            android:layout_centerVertical="true"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:text="密码"
	            android:textSize="18sp"
	            android:textColor="#000"
	            />
	        
	        <EditText
                android:id="@+id/et_login_pwd"
                android:password="true"
                android:singleLine="true"
	            android:layout_marginLeft="20dp"
	            android:layout_toRightOf="@id/tv_mobile_pwd_title"
	            android:layout_centerVertical="true"
				android:hint="请填写密码"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content"	
				android:background="@null"			            
	            />
	    </RelativeLayout>
	</LinearLayout>
	
	<Button
        android:id="@+id/btn_login_login"
        android:textColor="#FFF"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="登陆"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:background="@drawable/gray_angle_shape"
	    />
	

</LinearLayout>
