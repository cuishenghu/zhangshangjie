<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background_color">

    <LinearLayout
        android:id="@+id/main_bottom_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/index_bottom_tab_draw"
        style="@style/tab_text">

        <!--首页 把过磅 发现 我-->
        <zykj.com.barguotakeout.view.ChangeColorIconWithText
            android:id="@+id/tab_index"
            app:bg_icon="@mipmap/bottom_tab_01"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:bg_text="首页"
            app:bg_color="@color/tab_color"
            app:bg_text_size="12sp"
            style="@style/tab_text"/>

        <zykj.com.barguotakeout.view.ChangeColorIconWithText
            android:id="@+id/tab_bang"
            app:bg_icon="@mipmap/bottom_tab_02"
            android:layout_width="1dp"
            android:layout_weight="1"
            app:bg_text="巴国榜"
            app:bg_color="@color/tab_color"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:bg_text_size="12sp"
            style="@style/tab_text"/>

        <zykj.com.barguotakeout.view.ChangeColorIconWithText
            android:id="@+id/tab_find"
            app:bg_icon="@mipmap/bottom_tab_03"
            android:layout_width="1dp"
            android:layout_weight="1"
            app:bg_text="发现"
            android:layout_height="wrap_content"
            android:padding="5dp"
            style="@style/tab_text"
            app:bg_color="@color/tab_color"
            app:bg_text_size="12sp"/>

        <zykj.com.barguotakeout.view.ChangeColorIconWithText
            android:id="@+id/tab_i"
            app:bg_icon="@mipmap/bottom_tab_4"
            android:layout_width="1dp"
            android:layout_weight="1"
            app:bg_text="我的"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:bg_color="@color/tab_color"
            app:bg_text_size="12sp"
            style="@style/tab_text"/>

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/index_pager"
            android:layout_above="@id/main_bottom_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

</RelativeLayout>
