<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray" >
    <RelativeLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@drawable/blank_bottom_devide">
        <ImageView
            android:onClick="back"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_actionbar_back"
            android:background="@drawable/btn_back_selector"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/index_title"
            style="@style/TitleTextTheme"
            android:layout_centerInParent="true"
            android:text="评论"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">
            <TextView
                android:text="味道"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:layout_marginLeft="30dp"
                style="@style/rating_Bar"
                android:stepSize="0.5"
                android:numStars="10"
                android:rating="6.5"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:id="@+id/comment_rating_bar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">
            <TextView
                android:text="卫生"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:layout_marginLeft="30dp"
                style="@style/rating_Bar"
                android:stepSize="0.5"
                android:numStars="10"
                android:rating="6.5"
                android:layout_height="20dp"
                android:layout_width="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">
            <TextView
                android:text="环境"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:layout_marginLeft="30dp"
                style="@style/rating_Bar"
                android:stepSize="0.5"
                android:numStars="10"
                android:rating="6.5"
                android:layout_height="20dp"
                android:layout_width="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">
            <TextView
                android:text="服务"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:layout_marginLeft="30dp"
                style="@style/rating_Bar"
                android:stepSize="0.5"
                android:numStars="10"
                android:rating="6.5"
                android:layout_height="20dp"
                android:layout_width="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">
            <TextView
                android:text="性价比"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:layout_marginLeft="10dp"
                style="@style/rating_Bar"
                android:stepSize="0.5"
                android:numStars="10"
                android:rating="6.5"
                android:layout_height="20dp"
                android:layout_width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="20dp"
        android:background="@color/white">
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="3dp"
            android:minLines="4"
            android:gravity="top"
            android:background="@null"
            android:hint="评价内容(限定30个字符)"/>
    </LinearLayout>
    <Button
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="提交评论"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/gray_angle_shape"/>
</LinearLayout>